<UserControl x:Class="PharmacyStockManager.Views.SaleReturnsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="White">
    <Grid Margin="10">
        <DataGrid x:Name="dgSaleReturns" AutoGenerateColumns="False" CanUserAddRows="False" Style="{StaticResource FlatDataGridStyle}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Return ID" Binding="{Binding SaleReturnHeaderID}" Width="Auto"/>
                <DataGridTextColumn Header="Sale ID" Binding="{Binding SaleID}" Width="*"/>
                <DataGridTextColumn Header="Product" Binding="{Binding Product.ProductName}" Width="*"/>
                <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity}" Width="*"/>
                <DataGridTextColumn Header="Return Date" Binding="{Binding ReturnDate}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>

<ext:ChildWindow x:Class="PharmacyStockManager.Views.PopupWindows.CategoryDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ext="http://schemas.xceed.com/wpf/xaml/toolkit"
       Background="White">
    <ext:ChildWindow.Caption>
        Add / Edit Category
</ext:ChildWindow.Caption>
<Grid Margin="15" Width="350">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Category" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
        <StackPanel Grid.Row="1" Margin="0,5,0,0">
            <TextBlock Text="Category Name:" FontWeight="SemiBold"/>
            <TextBox x:Name="txtName" Height="30" Margin="0,5,0,10" Style="{StaticResource ValidationTextbox}" Text="{Binding CategoryName,UpdateSourceTrigger=LostFocus,ValidatesOnDataErrors=True}"/>
        </StackPanel>
        <StackPanel Grid.Row="2">
            <TextBlock Text="Description:" FontWeight="SemiBold"/>
            <TextBox x:Name="txtDesc" Height="80" TextWrapping="Wrap" AcceptsReturn="True" Margin="0,5,0,10" Style="{StaticResource ValidationTextbox}" Text="{Binding Description,UpdateSourceTrigger=LostFocus,ValidatesOnDataErrors=True}"/>
        </StackPanel>
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Save" Width="80" Height="30" Margin="0,10,10,0" Background="#4CAF50" Style="{StaticResource RoundedActionButton}" Command="{Binding SaveCommand}"  />
            <Button Content="Cancel" Width="80" Height="30" Margin="0,10,0,0" Background="LightGray" Style="{StaticResource RoundedActionButton}" Foreground="Black" Command="{Binding CancelCommand}"/>
        </StackPanel>
    </Grid>
</ext:ChildWindow>

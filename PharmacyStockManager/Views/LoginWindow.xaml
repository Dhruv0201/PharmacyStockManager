<Window x:Class="PharmacyStockManager.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Pharmacy Login" Height="550" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="White"
        KeyDown="Window_KeyDown">

    <Grid>
        <!-- Centered Card -->
        <Border Width="340" Height="400" Background="White"
                VerticalAlignment="Center" HorizontalAlignment="Center"
                Padding="30" BorderThickness="2">
            <StackPanel>
                <!-- Header -->
                <TextBlock Text="Goodluck Pharmacy" FontSize="28" FontWeight="Bold" 
                           HorizontalAlignment="Center" Margin="0,0,0,45"
                           Foreground="#4CAF50"/>

                <!-- Username -->
                <StackPanel Margin="0,10,0,15">
                    <TextBlock Text="Username" FontSize="10"/>
                    <TextBox x:Name="txtUserName" Padding="10" Text="{Binding Username,UpdateSourceTrigger=LostFocus}"
                             Width="270" BorderBrush="#4CAF50" BorderThickness="1"
                             Background="#FFFFFF" Foreground="#333" FontWeight="SemiBold"/>
                </StackPanel>

                <!-- Password -->
                <StackPanel Margin="0,0,0,40">
                    <TextBlock Text="Password" FontSize="10"/>
                    <Grid>
                        <PasswordBox x:Name="PasswordBox" Padding="10" Width="270" PasswordChanged="PasswordBox_PasswordChanged"
                                     BorderBrush="#4CAF50" BorderThickness="1" Background="#FFFFFF"/>
                        <TextBox x:Name="txtPassword" Padding="10" Width="270"
                                 Visibility="Collapsed" BorderBrush="#4CAF50" BorderThickness="1" Background="#FFFFFF"
                                 Foreground="#333" FontWeight="SemiBold"/>
                        <Button x:Name="TogglePasswordBtn" Content="👁" 
                                Width="35" Height="35" HorizontalAlignment="Right" VerticalAlignment="Center"
                                Margin="0,0,5,0" Background="Transparent" BorderThickness="0"
                                FontSize="16" Click="TogglePasswordBtn_Click" Foreground="#4CAF50"/>
                    </Grid>
                </StackPanel>

                <!-- Login Button -->
                <Button Content="LOGIN" Name="btnLogin" Command="{Binding LoginCommand}"
            Style="{StaticResource RoundedActionButton}"
                    Background="#4CAF50"
                    />
            </StackPanel>
        </Border>
    </Grid>
</Window>

<UserControl x:Class="PharmacyStockManager.Views.ProductsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converter="clr-namespace:PharmacyStockManager.Converters"
             Background="White">
    <UserControl.Resources>
        <converter:RowNumberToSerialNumberConverter x:Key="RowIndexConverter"/>
    </UserControl.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header: Search + CRUD buttons -->
        <Border Grid.Row="0" Background="#F7F7F7" Padding="10" CornerRadius="5" Margin="0,0,0,10">
            <DockPanel>
                <!-- Right side buttons -->
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" HorizontalAlignment="Right">
                    <Button Content="Add" Width="80" Height="30" Command="{Binding AddCommand}" 
                            Background="Orange" Foreground="White" FontWeight="SemiBold" Margin="5,0" 
                            Style="{StaticResource RoundedActionButton}" BorderBrush="Transparent" Cursor="Hand"/>
                    <Button Content="Refresh" Width="80" Height="30" Command="{Binding RefreshCommand}"
                            Background="LightGray" Foreground="Black" FontWeight="SemiBold" Margin="5,0" 
                            Style="{StaticResource RoundedActionButton}" BorderBrush="Transparent" Cursor="Hand"/>
                </StackPanel>

                <!-- Left side search -->
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                    <TextBlock Text="Search:" VerticalAlignment="Center" FontWeight="SemiBold" Margin="0,0,5,0"/>
                    <TextBox Width="200" Height="28" VerticalContentAlignment="Center"
                             Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,5,0"/>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- DataGrid -->
        <DataGrid x:Name="dgProducts" Grid.Row="1"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="True"
                  ItemsSource="{Binding Products}"
                  SelectionMode="Single"
                  SelectionUnit="FullRow"
                  AlternatingRowBackground="#F9F9F9"
                  RowBackground="White"
                  GridLinesVisibility="None"
                  RowHeaderWidth="0"
                  BorderThickness="0"
                  FontSize="12"
                  FontFamily="Segoe UI"
                  ColumnHeaderHeight="40"
                  RowHeight="30"
                  SnapsToDevicePixels="True"
                  HorizontalScrollBarVisibility="Auto"
                  VerticalScrollBarVisibility="Auto"
                  Background="White"
                  Margin="0">

            <DataGrid.Resources>
                <!-- Flat column headers -->
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                    <Setter Property="Background" Value="White"/>
                    <Setter Property="Foreground" Value="#333"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="FontSize" Value="12"/>
                    <Setter Property="Padding" Value="10,5"/>
                    <Setter Property="BorderThickness" Value="0,0,0,1"/>
                    <Setter Property="BorderBrush" Value="#EEE"/>
                    <Setter Property="HorizontalContentAlignment" Value="Left"/>
                </Style>

                <!-- Row hover effect -->
                <Style TargetType="DataGridRow">
                    <Setter Property="SnapsToDevicePixels" Value="True"/>
                    <Setter Property="Background" Value="White"/>
                    <Setter Property="Margin" Value="0"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="DataGridRow">
                                <Border x:Name="DGR_Border"
                                        Background="{TemplateBinding Background}"
                                        SnapsToDevicePixels="True">
                                    <DataGridCellsPresenter/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="DGR_Border" Property="Background" Value="#F0F8FF"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="DGR_Border" Property="Background" Value="#D0E4FF"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>

                <!-- Text vertical centering style -->
                <Style x:Key="CenterTextStyle" TargetType="TextBlock">
                    <Setter Property="VerticalAlignment" Value="Center"/>
                </Style>
            </DataGrid.Resources>

            <DataGrid.Columns>
                <DataGridTextColumn Header="Sr No." Binding="{Binding RelativeSource={RelativeSource AncestorType=DataGridRow}, Converter={StaticResource RowIndexConverter}}" Width="50" 
                                    ElementStyle="{StaticResource CenterTextStyle}"/>
                <DataGridTextColumn Header="Name" Binding="{Binding ProductName}" Width="2*" 
                                    ElementStyle="{StaticResource CenterTextStyle}"/>
                <DataGridTextColumn Header="Category" Binding="{Binding CategoryName}" Width="2*" 
                                    ElementStyle="{StaticResource CenterTextStyle}"/>
                <DataGridTextColumn Header="Supplier" Binding="{Binding SupplierName}" Width="2*" 
                                    ElementStyle="{StaticResource CenterTextStyle}"/>
                <DataGridTextColumn Header="Batch No." Binding="{Binding BatchNumber}" Width="100" 
                                    ElementStyle="{StaticResource CenterTextStyle}"/>
                <DataGridTextColumn Header="Expiry" Binding="{Binding ExpiryDate}" Width="120" 
                                    ElementStyle="{StaticResource CenterTextStyle}"/>
                <DataGridTextColumn Header="Purchase" Binding="{Binding PurchasePrice}" Width="100" 
                                    ElementStyle="{StaticResource CenterTextStyle}"/>
                <DataGridTextColumn Header="Selling" Binding="{Binding SellingPrice}" Width="100" 
                                    ElementStyle="{StaticResource CenterTextStyle}"/>
                <DataGridTextColumn Header="Qty" Binding="{Binding QuantityInStock}" Width="80" 
                                    ElementStyle="{StaticResource CenterTextStyle}"/>
                <DataGridTextColumn Header="Reorder" Binding="{Binding ReorderLevel}" Width="80" 
                                    ElementStyle="{StaticResource CenterTextStyle}"/>

                <!-- Actions -->
                <DataGridTemplateColumn Header="Actions" Width="120">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Command="{Binding DataContext.EditCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                        CommandParameter="{Binding}" ToolTip="Edit">
                                    <Image Source="pack://application:,,,/PharmacyStockManager;component/Resources/Icons/edit_icon.png"/>
                                </Button>
                                <Button Command="{Binding DataContext.DeleteCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                        CommandParameter="{Binding}" ToolTip="Delete" Margin="5,0,0,0">
                                    <Image Source="pack://application:,,,/PharmacyStockManager;component/Resources/Icons/delete_icon.png"/>
                                </Button>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
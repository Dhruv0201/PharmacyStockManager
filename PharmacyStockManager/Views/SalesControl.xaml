<UserControl x:Class="PharmacyStockManager.Views.SalesControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="White">
    <Grid Margin="10">
        <DataGrid x:Name="dgSales" AutoGenerateColumns="False" CanUserAddRows="False" Style="{StaticResource FlatDataGridStyle}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Sale ID" Binding="{Binding SaleID}" Width="Auto"/>
                <DataGridTextColumn Header="Product" Binding="{Binding ProductName}" Width="*"/>
                <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity}" Width="*"/>
                <DataGridTextColumn Header="Date" Binding="{Binding SaleDate}" Width="*"/>
                <DataGridTextColumn Header="Sold By" Binding="{Binding SoldBy}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
